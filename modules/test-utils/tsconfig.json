{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "ES2020", "DOM.Iterable"],
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"allowJs": true,
		"useDefineForClassFields": true,
		"allowImportingTsExtensions": true,
		"types": ["vitest/globals", "node", "@testing-library/jest-dom"]
	},
	"include": ["src"],
	"ts-node": {
		"compilerOptions": {
			"module": "ESNext"
		}
	}
}
